<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerVertical="true"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/displayBlock1"
        android:layout_width="409dp"
        android:layout_height="181dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteY="85dp">

        <TextView
            android:id="@+id/math_expression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:ems="10"
            android:gravity="end"
            android:inputType="textPersonName"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="40sp"
            />

        <EditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="end"
            android:inputType="textPersonName"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="= 0"
            android:textColor="@color/white"
            android:textSize="60sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="405dp"
        android:layout_height="473dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="9dp"
            app:layout_constraintBottom_toTopOf="@+id/alvin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/design_default_color_error"
                android:text="X" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="412dp"
            android:layout_height="67dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/alvin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_dynamic_neutral50"
                android:gravity="center"
                android:text="Elsa's"
                android:textColor="#3E2723"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/alvin"
            android:layout_width="265dp"
            android:layout_height="349dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/elsa2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="1dp"
                    android:text="7"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:text="8"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:text="9"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="1dp"
                    android:text="4"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:text="5"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:text="6"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="1dp"
                    android:text="1"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:text="2"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:text="3"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="horizontal">


                <Button
                    android:layout_width="164dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="0dp"
                    android:text="0"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="74dp"
                    android:layout_height="69dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:text="."
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/elsa2"
            android:layout_width="125dp"
            android:layout_height="337dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/material_dynamic_neutral50"
            app:layout_constraintStart_toEndOf="@+id/alvin"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="elsa'ss"
                android:background="@color/material_dynamic_neutral50"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>