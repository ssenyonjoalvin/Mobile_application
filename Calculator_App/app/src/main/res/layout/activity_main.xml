<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageNightMode"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/displayBlock1"
        android:layout_width="409dp"
        android:layout_height="181dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteY="85dp">

        <TextView
            android:id="@+id/textEquation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="end"
            android:inputType="textPersonName"
            android:paddingRight="5dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/secondary_text"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textInput"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="end"
            android:inputType="textPersonName"
            android:paddingRight="5dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/zero"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:textSize="60sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="405dp"
        android:layout_height="473dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout11"
            android:layout_width="389dp"
            android:layout_height="41dp"
            android:layout_marginBottom="108dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="9dp"
            app:layout_constraintBottom_toTopOf="@+id/alvin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent">

<!--            <Button-->
<!--                android:id="@+id/buttonBackspace"-->
<!--                android:layout_width="80dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="259dp"-->
<!--                android:layout_marginEnd="41dp"-->
<!--                android:backgroundTint="@color/design_default_color_error"-->
<!--                android:text="X"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                tools:ignore="TouchTargetSizeCheck" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="362dp"
            android:layout_height="94dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

            <Button
                android:id="@+id/buttonAllClear"
                android:layout_width="74dp"
                android:layout_height="77dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="1dp"
                android:text="C"
                android:backgroundTint="#777772"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonDivision"
                android:layout_width="74dp"
                android:layout_height="77dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="1dp"
                android:text="/"
                android:backgroundTint="#777772"
                android:textSize="20dp" />


            <Button
                android:id="@+id/buttonMultiplication"
                android:layout_width="74dp"
                android:layout_height="77dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="1dp"
                android:text="*"
                android:backgroundTint="#2563ee"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buttonBackspace"
                android:layout_width="74dp"
                android:layout_height="77dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="1dp"
                android:text="x"
                android:backgroundTint="@color/design_default_color_error"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/alvin"
            android:layout_width="265dp"
            android:layout_height="329dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="3dp"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/elsa2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonSeven"
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="#232525"
                    android:ems="10"
                    android:text="7"
                    android:textColor="#58d9e8"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonEight"
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="#232525"
                    android:ems="10"
                    android:text="8"
                    android:textColor="#58d9e8"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonNine"
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="#232525"
                    android:ems="10"
                    android:text="9"
                    android:textColor="#58d9e8"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonFour"
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="#232525"
                    android:ems="10"
                    android:text="4"
                    android:textColor="#58d9e8"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonFive"
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="#232525"
                    android:ems="10"
                    android:text="5"
                    android:textColor="#58d9e8"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonSix"
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="#232525"
                    android:ems="10"
                    android:text="6"
                    android:textColor="#58d9e8"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonOne"
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="#232525"
                    android:ems="10"
                    android:text="1"
                    android:textColor="#58d9e8"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonTwo"
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="#232525"
                    android:ems="10"
                    android:text="2"
                    android:textColor="#58d9e8"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonThree"
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="#232525"
                    android:ems="10"
                    android:text="3"
                    android:textColor="#58d9e8"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/buttonPercentage"
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="#777772"
                    android:text="%"
                    android:textSize="20dp" />


                <Button
                    android:id="@+id/buttonZero"
                    android:layout_width="74dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="#232525"
                    android:ems="10"
                    android:text="0"
                    android:textColor="#58d9e8"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonDecimalPoint"
                    android:layout_width="74dp"
                    android:layout_height="69dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="#232525"
                    android:ems="10"
                    android:text="."
                    android:textColor="#58d9e8"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/elsa2"
            android:layout_width="84dp"
            android:layout_height="344dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="21dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/alvin"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout14">


            <Button
                android:id="@+id/buttonSubtraction"
                android:layout_width="58dp"
                android:layout_height="78dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="3dp"
                android:backgroundTint="#2563ee"
                android:text="-"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/buttonAddition"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/buttonAddition"
                android:layout_width="58dp"
                android:layout_height="118dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#2563ee"
                android:text="+"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/buttonEqualsTo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonSubtraction" />

            <Button
                android:id="@+id/buttonEqualsTo"
                android:layout_width="58dp"
                android:layout_height="118dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="9dp"
                android:backgroundTint="#58d9e8"
                android:text="="
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonAddition" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>